ishikopath = envvar("ISHIKO_CPP");
import $(ishikopath)/FileSystem/Include/Ishiko/FileSystem.bkl;
import $(ishikopath)/Errors/Include/Ishiko/Errors.bkl;

setting DIPLODOCUSDB_SECRETSDB_ROOT
{
    help = "Path to the DiplodocusDB installation";
    default = '$(DIPLODOCUSDB)/SecretsDB';
}

template DiplodocusEmbeddedSecretsDB : IshikoFileSystem, IshikoErrors
{
    includedirs += $(DIPLODOCUSDB_SECRETSDB_ROOT)/Include;
    libdirs += $(DIPLODOCUSDB_SECRETSDB_ROOT)/Lib/$(arch);
}
